<%- include('partials/header'); -%>



<div class="main-meny">
  <% if (user) { let allow = 0 %>
    <h2><a href="/wishlist"> Add new wish</a></h2>
<% } %>
<ul class="recipes">
  <% let i = 1; wish.forEach(function(e) { if ( i < 6) { %>
    <li class="recipe" >
      <h2 id="<%= e.itemName %>"> <%= i %>. <%=e.itemName%></h2>
      <h4>Description:</h4>
      <p><%= e.description %></p>
      <form >
          <!-- Your form fields go here -->
          <label for="">made by</label>
          <button type="submit" id="<%= e.username %>" class="btn creatorName"><%= e.username %></button>
        </form>
        <% if (user && user.username === e.username) { %>
          <button class="editTHISSHIT botan"> Edit </button>
          <form class="hide formz " id="<%= e._id  %>">
            <h4 >Update Wish</h4>
            <label for="itemName" name="pokoId" class="formfix pokoId">item name</label>
            <input type="text" name="itemName" id="itemName" value="<%=e.itemName%>"/>
            <label for="description" class="formfix">description</label>
            <input type="text" name="description" id="description" value="<%= e.description %>"/>
            <button href="" class="update button">Update Now</button>
          </form>
          <% } %>

      <% if (user && user.username === e.username ||user && user.admin) { allow = 1%>
        <button class="delete button" id="<%= e._id %>"> <a href="">Delte Wish</a></button>
        <% } %>

        
    </li>
    <% i++} %>
  <% }); %>
  
</div>

<script>

  const search = document.querySelectorAll('.btn')
  for (let i = 0; i < search.length; i++) {
    search[i].addEventListener("click", function() {
          search[i].style.color="blue";
          location.assign(`/user/${search[i].id}`)
      
      })}
</script>
<% if (user) { %>

  <script>
  
    const forms = document.querySelectorAll('.formz')
    const editButtons = document.querySelectorAll(".editTHISSHIT")
  
    editButtons.forEach((button, index) => {
      button.addEventListener('click', e => {
        const clickedButton = event.target;
        const correspondingForm = forms[index];
        correspondingForm.classList.toggle('hide');
      })
    })
    forms.forEach((a) => {
      a.addEventListener('submit', async e => {
        e.preventDefault()
        
        let pokomonName = a.pokomonName.value
        let ability1 = a.ability1.value
        let ability2 = a.ability2.value
        let ability3 = a.ability3.value
        let id = a.id
        try {
          const res = await fetch('/updatePokomon', { 
              method: 'POST', 
              body: JSON.stringify({  id, pokomonName, ability1,ability2,ability3  }),
              headers: {'Content-Type': 'application/json'}
                  });
              const data = await res.json()
      } catch (error) {
        console.log(error);
      }})})
    
  
  </script>
  
  
    <% } %>
    <% if (user && allow == 1||user && user.admin) {%>
